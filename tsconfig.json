{
    "compilerOptions": {
      "outDir": "./dist/",
      "strict": true,
      "declaration": true,
      "sourceMap": true,
      "resolveJsonModule": true,
      "module": "CommonJS",
      "target": "es6",
      "alwaysStrict": true,
      "downlevelIteration": true,
      "lib": ["esnext", "dom"],
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": "."
    },
    "include": [
      "**/*.d.ts",
      "**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "**/*.test.*"
    ]
  }